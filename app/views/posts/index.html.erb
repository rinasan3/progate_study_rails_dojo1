<header>
      <div class="header-logo">
        <a href="/">TweetApp</a>
      </div>
      <ul class="header-menus">
        <li>
          <a href="/about">TweetAppとは</a>
        </li>
        <li>
          <a href="/posts/index">投稿一覧</a>
        </li>
      </ul>
</header>
<div class="main posts-index">
  <div class="container">
    <% @posts.each do |post| %>
      <div class="posts-index-item">
        <%= link_to(post.content, "/posts/#{post.id}") %>
      </div>
    <% end %>
  </div>
</div>